{
  "extends": "@strapi/typescript-utils/tsconfigs/admin",

  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "outDir": "dist",
    "module": "CommonJS",
    "rootDir": ".",
    "noEmit": false,
    "declarationMap": true,
    "declaration": true
  },
  "include": [
    "admin",
    "custom.d.ts",
    // Force the JSON files in the src folder to be included
    "admin/**/*.json"
  ],

  "exclude": [
    "node_modules/",
    "dist/",

    // Do not include server files in the server compilation
    "server/",
    // Do not include test files
    "**/*.test.ts"
  ]
}
