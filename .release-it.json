{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          }
        ]
      },
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "after:bump": "npm run build",
    "before:release": "npm pack"
  },
  "github": {
    "release": true,
    "assets": "*.tgz",
    "releaseNotes": "node ./scripts/extract-changelog.mjs ${version}"
  },
  "npm": {
    "publish": true
  }
}
